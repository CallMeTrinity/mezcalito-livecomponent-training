<div class="max-w-md m-4 bg-white bg-opacity-75 rounded-lg overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300 ease-in-out h-auto">
    <div class="px-6 py-4 h-48 overflow-hidden relative">
        <h2 class="font-bold text-xl md:text-2xl lg:text-3xl text-center mb-2 text-gray-800">{{ this.blogpost.title }}</h2>
        <p class="text-gray-700 text-base sm:text-lg text-center overflow-hidden">{{ this.blogpost.content }}</p>
        <div class="absolute bottom-0 left-0 w-full h-10 bg-gradient-to-t from-white to-transparent"></div>
    </div>
    <div class="px-6 pt-4 pb-2 flex justify-evenly">
        <a href="/edit/{{ this.blogpost.id }}" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Edit
        </a>
        <a href="/postView/{{ this.blogpost.id }}" class="bg-red-500 hover:bg-red-900 text-white font-bold py-2 px-4 rounded">
            View
        </a>
    </div>
</div>
