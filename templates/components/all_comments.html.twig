<section{{ attributes }} data-poll class="my-8 p-4">
    <h3 class="text-2xl font-bold text-gray-800 mb-4">Comments:</h3>
    {% for comment in this.getComments %}
        {{ component('comment', {'comment': comment}) }}
    {% else %}
        <p class="text-gray-500">No comments yet.</p>
    {% endfor %}
</section>