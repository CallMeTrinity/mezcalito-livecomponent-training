<div {{ attributes }} class="m-4">
    <div class="flex items-center bg-white rounded-lg shadow-lg overflow-hidden">
        <label for="search" class="pl-4 pr-2 text-gray-600">
            <svg class="w-5 h-5" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.817A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
        </label>
        <input
                id="search"
                type="search"
                data-model="query"
                name="query"
                value="{{ query }}"
                class="w-full py-2 pr-4 text-gray-700 leading-tight focus:outline-none"
                placeholder="Recherche..."
        >
    </div>

    <div class="mt-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for blogpost in this.blogposts %}
            <div>
                {{ component('blogpost', {'id': blogpost.id}) }}
            </div>
        {% endfor %}
    </div>
</div>
